<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<managed-bean>
		<managed-bean-name>applications</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanApplications</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanLogin</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registro</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanNewAccount</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viaje</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanViaje</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viajes</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanViajes</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>


	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
	<navigation-rule>
		<from-view-id>/public/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/public/error.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.verify}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/paginaPrincipal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{registro.initializeUser}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/public/registro.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.disponiblesPublico}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/public/viajesDisponiblesPublico.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/public/viajesDisponiblesPublico.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/public/registro.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{registro.createNewAccount}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/private/paginaPrincipal.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>nuevoViaje</from-outcome>
			<to-view-id>/private/crearViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.closeSession}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.disponibles}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/viajesDisponiblesPrivado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.promotor}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/misViajes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.misSolicitudes}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/misSolicitudes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>perfil</from-outcome>
			<to-view-id>/private/miPerfil.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/private/crearViaje.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{viaje.saveTrip}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/paginaPrincipal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/paginaPrincipal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/private/misSolicitudes.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/paginaPrincipal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/private/viajesDisponiblesPrivado.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{viajes.verPromotor(elem)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/perfilPromotor.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.verParticipantes(elem)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/perfilParticipantes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/paginaPrincipal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/private/misViajes.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{viaje.rellenar(elem)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/modificarViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{applications.cargarSolicitudes(elem)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/solicitudes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/paginaPrincipal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/private/miPerfil.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/paginaPrincipal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/private/perfilPromotor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/viajesDisponiblesPrivado.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
	<from-view-id>/private/modificarViaje.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{viaje.updateTrip}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/misViajes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/misViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
	<from-view-id>/private/solicitudes.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{viajes.promotor}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/misViajes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
	<from-view-id>/private/perfilParticipantes.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/private/viajesDisponiblesPrivado.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
